cc_defaults {
    name: "gtest_igt_gpu_tools_default",
    cppflags: [
        "-DFLAG_GTEST_ENABLED",
    ],
    compile_multilib: "64",
    multilib: {
        lib64: {
            suffix: "64"
        },
    },
    local_include_dirs: ["include"],
    require_root: true,
    test_suites: ["device-tests"],
}

